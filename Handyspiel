import java.util.Scanner;

public class GuessTheNumber {
    public static void main(String[] args) {
        int numberToGuess = (int) (Math.random() * 100 + 1);
        Scanner input = new Scanner(System.in);
        int guess;
        
        System.out.println("Willkommen bei Guess the Number!");
        System.out.println("Rate eine Zahl zwischen 1 und 100:");
        
        do {
            guess = input.nextInt();
            if (guess < numberToGuess) {
                System.out.println("Die gesuchte Zahl ist größer.");
            } else if (guess > numberToGuess) {
                System.out.println("Die gesuchte Zahl ist kleiner.");
            }
        } while (guess != numberToGuess);
        
        System.out.println("Gratulation! Du hast die gesuchte Zahl gefunden.");
    }
}
